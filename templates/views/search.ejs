<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Inventory Management</title>

    <!-- Icons font CSS-->
    <link href="vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">

    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i"
        rel="stylesheet">

    <!-- Vendor CSS-->
    <link href="vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

    <!-- bootstrap -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>


    <!-- Main CSS-->
    <link href="css/main.css" rel="stylesheet" media="all">
    <link rel="stylesheet" href="css/navbar.css">
</head>

<body>

    <!-- navbar -->




    <div class="page-wrapper bg-red  p-b-100 font-robo">
        <%- include('../partials/navbar.ejs') %>
            <div class="wrapper wrapper--w960 p-t-100">
                <div class="card card-2">
                    <div class="card-heading"></div>
                    <div class="card-body">
                        <h2 class="title">Search Results</h2>

                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Item</th>
                                    <th scope="col">container</th>
                                    <th scope="col">quantity</th>
                                    <th scope="col">action</th>
                                </tr>
                            </thead>
                            <tbody>


                                <% let i=0; items.forEach(element=> {
                                    i++

                                    %>

                                    <tr>
                                        <th scope="row">
                                            <%= i %>
                                        </th>
                                        <td>
                                            <%= element.item %>
                                        </td>
                                        <td>
                                            <%= element.container %>
                                        </td>
                                        <td>
                                            <%= element.qty %>
                                        </td>
                                        <td>
                                            <a href="/delete/<%=element._id%>" class="badge badge-danger" onclick="return confirm('Are you sure you want to delete this item?');">delete</a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>






                    </div>
                </div>
            </div>
    </div>

    <!-- Jquery JS-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="vendor/select2/select2.min.js"></script>
    <script src="vendor/datepicker/moment.min.js"></script>
    <script src="vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="js/navbar.js"></script>
    <script src="js/global.js"></script>

</body>

</html>
<!-- end document-->